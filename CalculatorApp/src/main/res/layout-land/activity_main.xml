<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/formulaView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textEnd"
        android:textColor="@color/darkerGrey"
        android:textSize="25sp" />


    <LinearLayout style="@style/horizontalLayoutLand">

        <Button
            android:id="@+id/logBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/log" />

        <Button
            android:id="@+id/quadrateBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/quadrate" />

        <Button
            android:id="@+id/factorialBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/factorial" />

        <Button
            android:id="@+id/divideBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/divide" />

        <Button
            android:id="@+id/multiplyBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/multiply" />

        <Button
            android:id="@+id/deleteLastBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="deleteLastChar"
            android:text="@string/deleteLast" />

    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutLand">

        <Button
            android:id="@+id/sinBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/sin" />

        <Button
            android:id="@+id/inverseBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/inverse" />

        <Button
            android:id="@+id/sevenBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/seven" />

        <Button
            android:id="@+id/eightBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/eight" />

        <Button
            android:id="@+id/nineBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/nine" />

        <Button
            android:id="@+id/clearBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="clearFormulaField"
            android:text="@string/clear" />


    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutLand">

        <Button
            android:id="@+id/cosBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/cos" />

        <Button
            android:id="@+id/squareRootBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/squareRoot" />

        <Button
            android:id="@+id/fourBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/four" />

        <Button
            android:id="@+id/fiveBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/five" />

        <Button
            android:id="@+id/sixBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/six" />

        <Button
            android:id="@+id/addBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/add" />

    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutLand">

        <Button
            android:id="@+id/tanBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/tan" />

        <Button
            android:id="@+id/piBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/pi" />

        <Button
            android:id="@+id/oneBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/one" />

        <Button
            android:id="@+id/twoBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/two" />

        <Button
            android:id="@+id/threeBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/three" />

        <Button
            android:id="@+id/subtractBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/subtract" />



    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutLand">

        <Button
            android:id="@+id/openBracketBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/openBracket" />

        <Button
            android:id="@+id/closeBracketBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/closeBracket" />

        <Button
            android:id="@+id/dotBtn"
            style="@style/smallBlueButtonLand"
            android:onClick="setFormula"
            android:text="@string/dot" />

        <Button
            android:id="@+id/zeroBtn"
            style="@style/smallRegularButtonLand"
            android:onClick="setFormula"
            android:text="@string/zero" />

        <Button
            android:id="@+id/equalsBtnBtn"
            style="@style/bigBlueButtonLand"
            android:onClick="calculateToNewValue"
            android:text="@string/equals" />

    </LinearLayout>


</LinearLayout>